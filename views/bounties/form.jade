extends ../layouts/layout

block content
  form(action='/bounties/new', method='post', enctype='multipart/form-data', name='bounty-new', class='form-horizontal', role='form')
    .form-group
      label(class='col-sm-2 col-sm-offset-2 control-label', for='bounty-title') title
      .col-sm-5
        input(type='text', name='title', id='bounty-title', class='form-control flat input-lg')

    .form-group
      label(class='col-sm-2 col-sm-offset-2 control-label', for='bounty-description') description
      .col-sm-5
        textarea(name='description', id='bounty-description', class='form-control flat input-lg')

    .form-group
      label(class='col-sm-2 col-sm-offset-2 control-label', for='bounty-tag') tag
      .col-sm-5
         input(type='text', name='tag', id='bounty-tag', class='form-control flat input-lg')

    .form-group
      label(class='col-sm-3 col-sm-offset-2 control-label', for='bounty-start') starting
      .col-sm-4.input-group.date#dtpicker-start
        input(type='text', name='start', id='bounty-start', class='form-control flat input-lg')
        span.input-group-addon
          span.fui-calendar

    .form-group
      label(class='col-sm-3 col-sm-offset-2 control-label', for='bounty-start') ending
      .col-sm-4.input-group.date#dtpicker-start
        input(type='text', name='end', id='bounty-end', class='form-control flat input-lg')
        span.input-group-addon
          span.fui-calendar
    .form-group
      label(class='col-sm-2 col-sm-offset-2 control-label', for='bounty-background') background
      .col-sm-5
         input(type='file', name='background', id='bounty-background', class='form-control flat input-lg')


    .form-group
      .col-sm-10.col-sm-offset-4
        input(class='btn btn-embossed btn-primary', type='submit', value='420 BLAZE IT')

block js_addons
  script(src='/javascripts/vendor/bootstrap-datetimepicker.min.js')
  script(src='/javascripts/vendor/moment.min.js')
  script(src='/javascripts/app/bounties.js')
